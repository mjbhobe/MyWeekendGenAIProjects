    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": [
                "--zoom=1.2",
                "--for_sjb",
            ]
        },
        {
            "name": "Streamlit Debug",
            "type": "debugpy",
            "request": "launch",
            "program": "C:\\Dev\\anaconda3\\envs\\py311\\Scripts\\streamlit.exe", // Path to Streamlit
            "args": [
                "run",
                "${file}"
            ], // Streamlit run command
            "console": "integratedTerminal",
            "justMyCode": true,
            //"env": {
            //    "PYTHONPATH": "${workspaceFolder}" // Optional: Set PYTHONPATH
            //}
        }
    ]
}